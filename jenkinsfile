stage('Check Container Connectivity') {
    steps {
        script {
            def containers = ['a9dff59353f2', '6c49fdd6b2b4', '840e50f48849', '06dc0085e587', 'bc6245dadbe2']
            for (container in containers) {
                def response = sh(script: "docker inspect -f '{{.State.Running}}' ${container}", returnStatus: true)
                if (response == 0) {
                    echo "El contenedor con ID ${container} est치 en ejecuci칩n"
                } else {
                    error "El contenedor con ID ${container} no est치 en ejecuci칩n"
                }
            }
        }
    }
}

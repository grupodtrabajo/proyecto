pipeline {
    agent any
    stages {
        stage('Check Jenkins Connectivity') {
            steps {
                script {
                    try {
                        sh "ping -c 1 jenkins.example.com" // Cambia jenkins.example.com por el dominio de tu servidor Jenkins
                        echo "Conexión exitosa con Jenkins"
                    } catch (Exception e) {
                        error "No se pudo establecer conexión con Jenkins"
                    }
                }
            }
        }
        stage('Check NGINX Connectivity') {
            steps {
                script {
                    try {
                        sh "curl -Is http://nginx.example.com | head -n 1" // Cambia nginx.example.com por el dominio de tu servidor NGINX
                        echo "Conexión exitosa con NGINX"
                    } catch (Exception e) {
                        error "No se pudo establecer conexión con NGINX"
                    }
                }
            }
        }
        stage('Build') {
            steps {
                // Pasos para la etapa de construcción
                echo 'Construyendo...'
            }
        }
        stage('Test') {
            steps {
                // Pasos para la etapa de pruebas
                echo 'Ejecutando pruebas12...'
            }
        }
        stage('Deploy') {
            steps {
                // Pasos para la etapa de implementación
                echo 'Implementando...'
            }
        }
    }
}

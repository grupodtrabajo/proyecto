pipeline {
    agent any
    stages {
        stage('Check Connectivity') {
            steps {
                script {
                    def connected = sh(script: "ping -c 1 google.com", returnStatus: true)
                    if (connected == 0) {
                        echo "Connected to the internet"
                    } else {
                        error "Not connected to the internet"
                    }
                }
            }
        }

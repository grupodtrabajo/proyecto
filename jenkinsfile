pipeline {
    agent any

    stages {
        stage('Check SonarQube Connection') {
            steps {
                script {
                    def response = sh(script: "curl -IsS http://localhost:9000/", returnStatus: true)
                    if (response == 0) {
                        echo "Conexi√≥n exitosa a SonarQube en http://localhost:9000/"
                    } else {
                        error "No se pudo conectar a SonarQube en http://localhost:9000/"
                    }
                }
            }
        }
    }
}

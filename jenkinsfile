pipeline {
    agent any

    stages {
        stage('Check OWASP ZAP Connection') {
            steps {
                script {
                    def response = sh(script: "docker inspect -f '{{.State.Running}}' 06dc0085e587", returnStatus: true)
                    if (response == 0) {
                        echo "OWASP ZAP está instalado y en ejecución en el contenedor con ID 06dc0085e587"
                    } else {
                        error "OWASP ZAP no está instalado o no está en ejecución en el contenedor con ID 06dc0085e587"
                    }
                }
            }
        }
    }
}


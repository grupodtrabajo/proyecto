pipeline {
    agent any

    stages {
        stage('Check SonarQube Connection') {
            steps {
                script {
                    def response = sh(script: "docker inspect -f '{{.State.Running}}' 6c49fdd6b2b4", returnStatus: true)
                    if (response == 0) {
                        echo "SonarQube está instalado y en ejecución en el contenedor con ID 6c49fdd6b2b4"
                    } else {
                        error "SonarQube no está instalado o no está en ejecución en el contenedor con ID 6c49fdd6b2b4"
                    }
                }
            }
        }
    }
}

